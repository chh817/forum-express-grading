                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
              {{else}}
              <img class="card-img-top img-fluid"
                src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973461_960_720.png"
                alt="Card image cap" width="6px" height="6px" style="transition: opacity 0.5s; opacity:0;"
                onload="this.style.opacity=1;">
              {{/if}}
            </a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>